@using Dominio
@model IEnumerable<Pasaje>;

<h1 class="text-white mb-3 text-center">Mis Pasajes</h1>
<div class="d-flex justify-content-center">
    <div class="content-card" style="max-width: 1000px; width: 100%;">

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Vuelo</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Equipaje</th>
                            <th>Precio</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Pasaje p in Model)
                        {
                            <tr>
                                <td>@p.Vuelo.NumeroVuelo - (@p.Vuelo.Ruta.AeropuertoSalida.CodigoIata a @p.Vuelo.Ruta.AeropuertoLlegada.CodigoIata)</td>
                                <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@p.Cliente.Nombre</td>
                                <td>@p.Equipaje</td>
                                <td>$@((int)p.Precio)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-white-50 text-center py-4">
                <i class="fas fa-ticket-alt me-2"></i> Aún no tienes pasajes comprados.
            </p>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Msg))
{
    <p class="text-danger mt-3 text-center">@ViewBag.Msg</p>
}
@using Dominio
@model IEnumerable<Pasaje>;

<h1 class="text-white mb-3 text-center">Listado de Pasajes</h1>
<div class="d-flex justify-content-center">
    <div class="content-card" style="max-width: 1000px; width: 100%;">

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover table-bordered text-center align-middle">
                    <thead>
                        <tr>
                            <th>Vuelo</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Equipaje</th>
                            <th>Precio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Pasaje p in Model)
                        {
                            <tr>
                                <td>@p.Vuelo.NumeroVuelo</td>
                                <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@p.Cliente.Nombre</td>
                                <td>@p.Equipaje</td>
                                <td>$@((int)p.Precio)</td>
                                <td>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-white-50 text-center py-4">
                <i class="fas fa-ticket-alt me-2"></i> No hay pasajes registrados en el sistema.
            </p>
        }
    </div>
</div>